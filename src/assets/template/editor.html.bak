<!DOCTYPE html>
<html>
    <head>
        <title>LighthouseMC Editor</title>
        <link rel="icon" type="image/png" href="/assets/image/logo_transparent.png">
        <link rel="stylesheet" type='text/css' href="https://cdn.jsdelivr.net/gh/devicons/devicon@latest/devicon.min.css" />
        <link href="https://fonts.googleapis.com/css2?family=Noto+Sans:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:ital,wght@0,100..900;1,100..900&display=swap" rel="stylesheet">
        <link href="https://fonts.googleapis.com/css2?family=Fira+Code:wght@300..700&display=swap" rel="stylesheet">
        <style> /* Page & editor root */
            html, body, #editor_left *, #editor_resize_hsplit, #editor_right, #editor_filetabs *, #editor_footer * {
                margin: 0;
                padding: 0;
                width: 100%;
                height: 100%;
                overflow: hidden;
                outline: none;
            }
            body {
                width: 100%;
                height: 100%;
                background-color: #000000;
            }
            .hbox {
                display: flex;
                flex-direction: row;
            }
            .vbox {
                display: flex;
                flex-direction: column;
            }
            #editor_root {
                width: 100%;
                height: 100%;
            }
            #editor_left {
                flex-shrink: 0;
                width: 375px;
                height: 100%;
                max-width: 75%;
            }
            #editor_resize_hsplit {
                width: 5px;
                height: 100%;
                border: none;
                border-right: 1px solid rgba(92,92,92,1);
                cursor: ew-resize;
                background: none;
                background-color: rgba(92,92,92,0);
                transition: background-color 0.125s, border-right-color 0.125s;
                mask-image: linear-gradient(to right, rgba(0,0,0,0), rgba(0,0,0,1));
            }
            #editor_resize_hsplit:hover, #editor_resize_hsplit:active {
                border-right-color: rgba(128,128,128,1);
                background-color: rgba(128,128,128,1);
            }
            hr {
                height: 1px;
                background-color: rgb(192,192,192,0.5);
                border: none;
            }
            a {
                color: #dfdfdf;
                text-decoration: none;
            }
        </style>
        <style> /* Subserver properties */
            #editor_subserver_properties {
                width: 100%;
                height: 37.5px;
                border-bottom: 1px solid #5f5f5f;
                color: #ffffff;
            }
            #editor_subserver_properties #editor_subserver_name {
                font-size: 12.5pt;
                font-family: "Roboto Condensed", serif;
                font-weight: 625;
                font-style: normal;
                text-transform: uppercase;
                text-wrap: nowrap;
                text-overflow: ellipsis;
                line-height: 37.5px;
                user-select: none;
                background-color: rgb(255,255,255,0.0);
                transition: background-color 0.125s;
                cursor: pointer;
            }
            #editor_subserver_properties #editor_subserver_name:hover {
                background-color: rgb(255,255,255,0.125);
            }
            #subserver_properties_editor {
                position: absolute;
                top: 30px;
                left: 10px;
                padding: 10px;
                background-color: rgb(0,24,64,0.875);
                border: 2px solid rgb(24,32,92,0.875);
                border-radius: 5px;
                width: max-content;
                height: max-content;
                display: flex;
                flex-direction: column;
                gap: 5px;
                visibility: hidden;
                opacity: 0;
                transition: opacity 0.125s;
                z-index: 1;
            }
            #subserver_properties_editor h1 {
                font-size: 11pt;
                font-family: "Noto Sans", serif;
                font-weight: 750;
                font-style: normal;
            }
            #subserver_properties_editor h2 {
                font-size: 11pt;
                font-family: "Noto Sans", serif;
                font-weight: 500;
                font-style: normal;
            }
            #subserver_properties_editor h3 {
                font-size: 10pt;
                font-family: "Roboto Condensed", serif;
                font-weight: 375;
                font-style: normal;
                margin-top: -5px;
            }
            #subserver_properties_editor input {
                width: 375px;
                padding: 2.5px;
                font-size: 11pt;
                font-family: "Noto Sans", serif;
                font-weight: 500;
                font-style: normal;
                outline: none;
                border: none;
                background-color: rgb(255,255,255,0.125);
                border-radius: 5px;
                border-bottom: 2px solid rgb(255,255,255,0.25);
                color: #ffffff;
                transition: background-color 0.125s;
                cursor: text;
            }
            #subserver_properties_editor input:focus {
                background-color: rgb(255,255,255,0.25);
            }
            #subserver_properties_editor button {
                width: 100%;
                padding: 2.5px;
                font-size: 11pt;
                font-family: "Noto Sans", serif;
                font-weight: 500;
                font-style: normal;
                outline: none;
                border: none;
                background-color: rgb(255,255,255,0.125);
                border-radius: 5px;
                border: 2px solid rgb(255,255,255,0.25);
                color: #ffffff;
                transition: background-color 0.125s;
                cursor: grab; cursor: -webkit-grabbing; cursor: grabbing;
            }
            #subserver_properties_editor button:hover {
                background-color: rgb(255,255,255,0.25);
            }
            #subserver_properties_editor button:active {
                background-color: rgb(255,255,255,0.125);
            }
        </style>
        <style> /* File tree */
            #editor_filetree {
                width: 100%;
                height: 100%;
                padding-left: 8px;
                font-size: 10.25pt;
                font-family: "Noto Sans", serif;
                font-weight: 400;
                font-style: normal;
                overflow-y: scroll;
                scroll-behavior: smooth;
            }
            #editor_filetree::-webkit-scrollbar {
                display: none;
            }
            #editor_filetree * {
                overflow: visible;
                user-select: none;
            }
            #editor_filetree ul {
                list-style-type: none;
                color: #ffffff;
            }
            #editor_filetree li {
                height: max-content;
            }
            #editor_filetree li div {
                width: 100%;
                padding-top: 2px;
                padding-bottom: 2px;
                background-color: rgb(255,255,255,0.0);
                transition: background-color 0.125s;
                cursor: pointer;
            }
            #editor_filetree li div:hover {
                background-color: rgb(255,255,255,0.125);
            }
            #editor_filetree li div.editor_filetree_selected {
                background-color: rgb(255,255,255,0.25);
            }
            #editor_filetree .editor_filetree_fold:before {
                content: "❭";
                color: #ffffff;
                display: inline-block;
                margin-right: 6px;
                margin-left: 3px;
            }
            #editor_filetree .editor_filetree_fold.editor_filetree_unfolded:before {
                transform: rotate(90deg);
            }
            #editor_filetree .editor_filetree_nest {
                display: none;
            }
            #editor_filetree .editor_filetree_nest.editor_filetree_nest_unfolded {
                display: block;
                margin-left: 12px;
            }
            .noicon {
                opacity: 0;
            }
            .icon {
                opacity: 0.5;
            }
        </style>
        <style> /* File tabs */
            #editor_filetabs {
                width: 100%;
            }
            #editor_filetabs * {
                width: max-content;
                height: max-content;
                user-select: none;
                color: #dfdfdf;
                padding: 8px 12px;
                font-size: 10.25pt;
                font-family: "Noto Sans", serif;
                font-weight: 400;
                font-style: normal;
                cursor: grab; cursor: -webkit-grabbing; cursor: grabbing;
            }
            #editor_filetabs .editor_filetab_selected {
                color: #a6f500;
                border-bottom: 1px solid #bfbfbf;
            }
            #editor_filetabs *:after {
                margin-left: 8px;
                content: "×";
                opacity: 0;
                transition: opacity 0.125s;
            }
            #editor_filetabs *.editor_filetab_selected:after, #editor_filetabs *:hover:after {
                opacity: 1;
            }
        </style>
        <style> /* File path */
            #editor_filepath {
                width: 100%;
                border-bottom: 1px solid #5f5f5f;
                padding: 2px 16px;
                overflow: hidden;
                font-size: 9.5pt;
                font-family: "Noto Sans", serif;
                font-weight: 400;
                font-style: normal;
            }
            #editor_filepath * {
                width: max-content;
                user-select: none;
                color: #dfdfdf;
            }
            #editor_filepath *:not(:last-child):after {
                padding-left: 8px;
                padding-right: 8px;
                content: "❭";
            }
            #editor_filepath *:hover {
                color: #a6f500;
            }
        </style>
        <style> /* Code editor */
            #editor_code {
                width: 100%;
                height: 100%;
            }
        </style>
        <style> /* Footer */
            #editor_footer {
                border-top: 1px solid #5f5f5f;
                padding: 2px 16px;
                justify-content: space-between;
                font-size: 9.5pt;
                font-family: "Noto Sans", serif;
                font-weight: 400;
                font-style: normal;
                color: #dfdfdf;
            }
            #editor_footer #editor_footer_left, #editor_footer #editor_footer_right {
                gap: 24px;
            }
            #editor_footer * {
                width: max-content;
                user-select: none;
            }
        </style>
    </head>
    <body oncontextmenu="return false;">
        <div id="editor_root" class="hbox">
            <div id="editor_left" class="vbox">

                <div id="editor_subserver_properties">
                    <div id="editor_subserver_name" onclick="open_subserver_properties_editor();">{{SUBSERVER_NAME}}</div>
                    <div id="subserver_properties_editor">
                        <h1>Edit Subserver Properties</h1>
                        <hr />
                        <h2>Name</h2>
                        <input id="subserver_properties_editor_name" type="text" value="{{SUBSERVER_NAME}}" autocomplete="off", autocorrect="off", autocapitalize="off", spellcheck=false />
                        <h3>Subserver {{SUBSERVER_ID}}</h3>
                        <h3>by {{SUBSERVER_OWNER}}</h3>
                        <hr />
                        <h2>Description</h2>
                        <input id="subserver_properties_editor_description" type="text" value="{{SUBSERVER_DESCRIPTION}}" autocomplete="off", autocorrect="off", autocapitalize="off", spellcheck=false />
                        <br />
                        <hr />
                        <button>Save</button>
                        <hr />
                    </div>
                </div>

                <div id="editor_filetree">
                    <ul>
                        <li><div class="editor_filetree_fold">src</div><ul class="editor_filetree_nest">
                            <li><div class="editor_filetree_fold">assets</div><ul class="editor_filetree_nest">
                            </ul></li>
                            <li><div><i class="devicon-rust-original icon"></i> add.rs</div></li>
                            <li><div class="editor_filetree_selected"><i class="devicon-rust-original icon"></i> lib.rs</div></li>
                        </ul></li>
                        <li><div><i class="devicon-rust-original icon"></i> build.rs</div></li>
                        <li><div><i class="devicon-bash-plain icon"></i> build.sh</div></li>
                        <li><div><i class="devicon-rust-original noicon"></i> Cargo.toml</div></li>
                    </ul>
                </div>

            </div>

            <button id="editor_resize_hsplit" onmousedown="start_dragging_filetree_resize();"></button>

            <div id="editor_right" class="vbox">

                <div id="editor_filetabs" class="hbox">
                    <div>add.rs</div>
                    <div class="editor_filetab_selected">lib.rs</div>
                </div>

                <div id="editor_filepath" class="hbox">
                    <div>src</div>
                    <div>lib.rs</div>
                </div>

                <div id="editor_code"></div>

                <div id="editor_footer" class="hbox">
                    <div id="editor_footer_left" class="hbox">
                        <div><a href="https://github.com/LighthouseMC/VoxidianEditor" target="_blank" rel="noopener noreferrer">Voxidian Editor</a> {{VOXIDIAN_EDITOR_VERSION}} (<a href="https://github.com/LighthouseMC/VoxidianEditor/commit/{{VOXIDIAN_EDITOR_COMMIT_HASH}}" target="_blank" rel="noopener noreferrer">{{VOXIDIAN_EDITOR_COMMIT}}</a>)</div>
                    </div>
                    <div id="editor_footer_right" class="hbox">
                        <div>Offset <span id="editor_footer_cursor_offset">0</span></div>
                        <div>Ln <span id="editor_footer_cursor_line">1</span>, Col <span id="editor_footer_cursor_column">1</span><span id="editor_footer_cursor_selected"></span></div>
                    </div>
                </div>

            </div>
        </div>

        <script>{{EMBED_EDITOR_WS_JS}}</script> <!-- Server-client communication -->

        <script> // Drag to resize editor filetree.
            const e_editor_left          = document.getElementById("editor_left");
            const e_editor_resize_hsplit = document.getElementById("editor_resize_hsplit");
            var dragging_filetree_resize = false;
            function start_dragging_filetree_resize() {
                dragging_filetree_resize = true;
            }
            document.addEventListener("mouseup", function(_) {
                dragging_filetree_resize = false;
                document.body.style.cursor = "auto";
            });
            const dragging_filetree_resize_collapse_threshold = 250;
            document.addEventListener("mousemove", function(event) {
                if (dragging_filetree_resize) {
                    if (event.clientX < dragging_filetree_resize_collapse_threshold) {
                        document.body.style.cursor = "e-resize";
                        e_editor_resize_hsplit.style.cursor = "e-resize";
                    } else {
                        document.body.style.cursor = "ew-resize";
                        e_editor_resize_hsplit.style.cursor = "ew-resize";
                    }
                    if (event.clientX < (dragging_filetree_resize_collapse_threshold / 2.0)) {
                        e_editor_left.style.width = "0";
                    } else {
                        e_editor_left.style.width = Math.max(event.clientX, dragging_filetree_resize_collapse_threshold) + "px";
                    }
                }
            });
        </script>

        <script> // Subserver properties editor
            const e_subserver_properties_editor = document.getElementById("subserver_properties_editor");
            var subserver_properties_editor_open = false;
            var subserver_properties_editor_closing = false;
            function open_subserver_properties_editor() {
                if (! subserver_properties_editor_open) {
                    subserver_properties_editor_open = true;
                    e_subserver_properties_editor.style.visibility = "visible";
                    e_subserver_properties_editor.style.opacity = "1";
                }
            }
            document.addEventListener("mousedown", function(event) {
                if (subserver_properties_editor_open) {
                    if (! e_subserver_properties_editor.contains(event.target)) {
                        subserver_properties_editor_closing = true;
                        e_subserver_properties_editor.style.opacity = "0";
                        setTimeout(function() {
                            subserver_properties_editor_open = false;
                            subserver_properties_editor_closing = false;
                            e_subserver_properties_editor.style.visibility = "hidden";
                        }, 125);
                    }
                }
            });
        </script>

        <script> // File tree fold/unfold
            const togglers = document.getElementsByClassName("editor_filetree_fold");
            for (var i = 0; i < togglers.length; i++) {
                togglers[i].addEventListener("click", function() {
                    this.classList.toggle("editor_filetree_unfolded");
                    this.parentElement.querySelector(".editor_filetree_nest").classList.toggle("editor_filetree_nest_unfolded");
                });
            }
        </script>

        <script src="https://unpkg.com/monaco-editor@latest/min/vs/loader.js"></script> <!-- Code editor -->
        <script> // Code editor
            const e_editor_footer_cursor_line     = document.getElementById("editor_footer_cursor_line");
            const e_editor_footer_cursor_column   = document.getElementById("editor_footer_cursor_column");
            const e_editor_footer_cursor_offset   = document.getElementById("editor_footer_cursor_offset");
            const e_editor_footer_cursor_selected = document.getElementById("editor_footer_cursor_selected");

            require.config({ paths: { 'vs': 'https://unpkg.com/monaco-editor@latest/min/vs' }});

            var editor_code;
            require(["vs/editor/editor.main"], () => {

                monaco.editor.onDidCreateEditor((editor) => {
                    editor.layout();
                    editor_code = editor;
                });

                var req = new XMLHttpRequest();
                req.open("GET", "https://raw.githubusercontent.com/rafmsou/nicer-high-contrast/refs/heads/master/themes/Nicer%20High%20Contrast-color-theme.json", false);
                req.send(null);
                var resp = req.responseText.split("\n").map((line) => line.trim()).filter((line) => ! line.startsWith("//")).join("").replace(",}", "}");
                var theme = JSON.parse(resp);
                theme.base = "hc-black"
                theme.inherit = true;
                theme.rules = [];
                monaco.editor.defineTheme("nhc-black", theme);

                editor_code = monaco.editor.create(document.getElementById("editor_code"), {
                    value: "fn main() {\n    println!(\"Hello, World!\");\n}\n",
                    language: "rust",
                    theme: "nhc-black",
                    autoDetectHighContrast: false,
                    automaticLayout: true,
                    cursorBlinking: "smooth",
                    fontFamily: "Fira Code",
                    fontLigatures: true,
                    fontSize: 13,
                    fontWeight: "350",
                    minimap: {
                        showSlider: "always",
                        size: "proportional"
                    },
                    renderFinalNewline: "dimmed",
                    smoothScrolling: true
                });

                editor_code.onDidChangeCursorSelection((event) => {
                    let start        = event.selection.getStartPosition();
                    let end          = event.selection.getEndPosition();
                    let start_offset = editor_code.getModel().getOffsetAt(start);
                    let end_offset   = editor_code.getModel().getOffsetAt(end);
                    e_editor_footer_cursor_line.innerText = "" + start.lineNumber;
                    e_editor_footer_cursor_column.innerText = "" + start.column;
                    let selected = end_offset - start_offset;
                    if (selected > 0) {
                        e_editor_footer_cursor_offset.innerText = start_offset + "-" + end_offset;
                        e_editor_footer_cursor_selected.innerText = " (" + (end_offset - start_offset) + " selected)";
                    } else {
                        e_editor_footer_cursor_offset.innerText = start_offset;
                        e_editor_footer_cursor_selected.innerText = "";
                    }
                });
            });

            document.addEventListener("keydown", function (event) {
                if (event.ctrlKey) {
                    event.preventDefault();
                }
            });

        </script>

    </body>
</html>
